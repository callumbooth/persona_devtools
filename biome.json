{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": ["**/public/*", "dist"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentWidth": 1
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "useOptionalChain": "off"
      }
    }
  }
}
